---
import AppLayout from "./AppLayout.astro";
import type { ProjectFrontmatter } from "../helpers/projectHelpers";
import HeroBanner from "../components/HeroBanner.astro";

const frontmatter = Astro.props.frontmatter as ProjectFrontmatter;
---

<AppLayout title={frontmatter.title}>
  <HeroBanner
    patternSrc="url('/images/patterns/jigsaw.svg')"
    subtitle="Projects"
  />

  <div
    class="content-container-outer flexbox-vertical with-responsive-padding-inline"
  >
    <div class="content-container-inner">
      <a class="projects-home-link text-link" href="/projects">Projects Home</a>

      <h1>{frontmatter.title}</h1>

      <div class="subtitle">
        {frontmatter.year} â€¢ {frontmatter.genre}
      </div>

      <slot />
    </div>
  </div>
</AppLayout>

<style>
  :global(.content-container-inner h2) {
    margin-block-end: var(--spacing-4);
    margin-block-start: var(--spacing-7);
  }

  :global(.content-container-inner h3) {
    margin-block-end: var(--spacing-4);
    margin-block-start: var(--spacing-6);
  }

  :global(.content-container-inner h4) {
    margin-block-end: var(--spacing-3);
    margin-block-start: var(--spacing-5);
  }

  :global(.content-container-inner p) {
    margin-block-end: var(--spacing-5);
  }

  :global(.content-container-inner ul) {
    margin-block-end: var(--spacing-5);
  }

  :global(.content-container-inner .note) {
    background-color: var(--color-neutral-1);
    border-color: var(--color-neutral-5);
    border-radius: var(--border-radius-1);
    border-style: solid;
    border-width: var(--border-width-1);
    font-size: var(--font-size-1);
    gap: var(--spacing-4);
    margin: var(--spacing-5);
    padding: var(--spacing-4);
  }

  :global(.content-container-inner .note > *) {
    margin-block: 0;
  }

  :global(.content-container-inner .tile-list) {
    flex-direction: row;
    flex-wrap: wrap;
    gap: var(--spacing-5);
    justify-content: center;
    margin-block: var(--spacing-6);
  }

  :global(.content-container-inner .tile-list *) {
    margin-block: 0;
  }

  :global(.content-container-inner .tile-list p) {
    font-size: var(--font-size-1);
  }

  :global(.content-container-inner .tile-list > li) {
    border-color: var(--color-neutral-5);
    border-radius: var(--border-radius-1);
    border-style: solid;
    border-width: var(--border-width-1);
    gap: var(--spacing-4);
    padding: var(--spacing-4);
  }

  :global(.content-container-inner .tile-list-medium > li) {
    width: var(--sizing-13);
  }

  :global(.content-container-inner .tile-list-small > li) {
    width: var(--sizing-12);
  }

  .content-container-outer {
    align-items: center;
    padding-block-end: var(--spacing-7);
    padding-block-start: var(--spacing-5);
  }

  .projects-home-link {
    display: inline-block;
    margin-block-end: var(--spacing-7);
  }

  .subtitle {
    font-size: var(--font-size-4);
    margin-block-end: var(--spacing-6);
  }

  @media (min-width: 768px) {
    .content-container-inner {
      max-inline-size: var(--sizing-17);
    }
  }
</style>
