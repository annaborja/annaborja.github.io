---
import katex from "katex";

export interface Props {
  formula: string;
}

const { formula } = Astro.props;
---

<div
  class="katex-container"
  set:html={katex.renderToString(formula, { throwOnError: false })}
/>

<style>
  /* TODO(P1): Improve this styling. KaTeX containers are slightly cut off vertically and don't look great on mobile. */
  .katex-container {
    margin-block-end: var(--spacing-6);
    max-inline-size: calc(100vw - var(--spacing-5) * 2);
    overflow: auto hidden;
  }
</style>
